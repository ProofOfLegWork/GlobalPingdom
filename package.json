{
  "name": "global-ping-monitor",
  "version": "1.0.0",
  "description": "Global website monitoring utility with beautiful visualizations",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"nodemon server.js\" \"cd client && npm start\"",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "postinstall": "npm run install-client"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "node-cron": "^3.0.3",
    "axios": "^1.6.2",
    "sqlite3": "^5.1.6",
    "ping": "^0.4.4",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
